{
  "manifest_version": 2,
  "name": "ChromeCare",
  "description": "To arrange your Chrome Windows.",
  "version": "0.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Chrome Care"
  },

  "background": {
    "persistent": false,
    "scripts": ["arrange.js"]
  },

  "permissions": ["tabs"]
}
